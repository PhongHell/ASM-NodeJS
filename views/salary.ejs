<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/public/css/product.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>
            <main>
                <div class="centered">
                    <h1>
                        Lương tháng <%= month %>
                    </h1>
                    <hr>
                </div>

                <div class="container">
                    <div>
                        <p>Nhân viên : <%= staff.name %></p>
                        <p>Tổng số giờ làm thêm: <%= overTime %>
                        </p>
                        <p>Số giờ làm chưa đủ: <%= underTime %>
                        </p>
                        <p>Hệ số lương: <%= staff.salaryScale %>
                        </p>
                        <p>Lương: <b><%= (staff.salaryScale * 3000000 + (overTime/8 - underTime/8) * 200000).toLocaleString() %></b> VND</p>
                        <hr>
                        <p><i>Công thức tính lương: </i></p>
                        <p><i>salaryScale * 3000000 + (overTime - số giờ làm thiếu) * 200000</i></p>
                    </div>
                </div>

            </main>
            <%- include('./includes/end.ejs') %>